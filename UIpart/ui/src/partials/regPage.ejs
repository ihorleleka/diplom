<div class="page regPage" name="regPage">
  <div class="row">        
    <div class="col-md-12">
      <div class="quote-panel-background">
        <h2 class="step-title">Реєстрація</h2>   
          <div class="col-md-4 col-md-offset-2 col-xs-12">
            <label>Емейл</label>
            <input type="email" class="email" placeholder="Ваш email" regex="^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$">
            <label>Пароль</label>
            <input type="password" class="password" placeholder="Ваш пароль" regex="^[a-zA-Z0-9]{6,}$">
            <label>Введіть пароль ще раз</label>
            <input type="password" class="password_copy" placeholder="Повторіть пароль" regex="^[a-zA-Z0-9]{6,}$">
          </div>
          <div class="col-md-4 сol-md-offset-2 col-xs-12">
            <label>Прізвище</label>
            <input type="text" class="surname" placeholder="Прізвище" regex="^[а-яА-ЯіЇєІЇЄ]{1,}$">
            <label>Ім'я</label>
            <input type="text" class="name" placeholder="Ім'я" regex="^[а-яА-ЯіЇєІЇЄ]{1,}$">            
            <label>По батькові</label>
            <input type="text" class="father_name" placeholder="По батькові" regex="^[а-яА-ЯіЇєІЇЄ]{1,}$">
          </div>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="buttons-block">
        <button class="reg">                  
            <span>Зареєструватись</span>
            <i class="icon icon-chevron-right"></i>
        </button>
      </div>
    </div>
  </div>    
</div>